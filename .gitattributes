# Normalize line endings (LF) for source and config to avoid CRLF churn across OSes
*.yml text eol=lf
*.yaml text eol=lf
Dockerfile text eol=lf
*.sh text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf

# Keep binary and env files untouched
*.png -text
*.jpg -text
*.jpeg -text
*.gif -text
*.svg -text
app.env -text
